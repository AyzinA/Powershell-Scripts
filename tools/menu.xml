        Topmost="true" WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="true" Background="Transparent">
    <Grid>
        <Image Name="BackgroundImage" VerticalAlignment="Top" HorizontalAlignment="Left" Width="600" Height="450"/>
		
		<Label Name="title" Content="title" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,-3,0,0"/>
		
		<Label Content="הכנס פרטי המשתמש:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,20,0,0" Width="198" Height="23" FlowDirection="RightToLeft"/>
        <TextBox Name="i_User" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="6,40,0,0" Width="190" Text="" FlowDirection="RightToLeft"/>
		
		<Label Content="הכנס פרטי המחשב:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,60,0,0" Width="198" Height="23" FlowDirection="RightToLeft"/>
        <TextBox Name="i_Computer" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="6,80,0,0" Width="190" Text="" FlowDirection="RightToLeft"/>

		<TextBox Name="Console" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="1,278,0,0" Width="200" Height="150" TextWrapping="Wrap" ScrollViewer.VerticalScrollBarVisibility="Auto" Background="Black" Foreground ="White" IsReadOnly="True" FlowDirection="RightToLeft"/>
		
		<Button Name="btn_Close" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="581,2,0,0" Width="17" Height="17">
            <Image Name="btn_close_image"></Image>
        </Button>
		
		<Button Name="btn_Opt1" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="203,23,0,0" Width="395" Height="30" Content="Find User Information | מצה מידע על המשתמש" Background="Black" Foreground="White" BorderThickness="0"/>
		<Button Name="btn_Opt2" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="203,54,0,0" Width="395" Height="30" Content="Find Computer Information | מצה מידע על המחשב" Background="Black" Foreground="White" BorderThickness="0"/>
		<Button Name="btn_Opt3" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="203,85,0,0" Width="395" Height="30" Content="btn_Opt3 | btn_Opt3" Background="Black" Foreground="White" BorderThickness="0"/>	
		
        <Label Content="לשלוח מייל ל" HorizontalAlignment="Left" Margin="999,999,0,0" VerticalAlignment="Top" Width="80" FlowDirection="RightToLeft"/>
        <Label Content="מספר פנייה" HorizontalAlignment="Left" Margin="999,999,0,0" VerticalAlignment="Top" Width="70" FlowDirection="RightToLeft"/>
        <TextBox Name="pnia" HorizontalAlignment="Left" Height="22" Margin="824,30,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="100"/>
        <TextBox Name="mail" HorizontalAlignment="Left" Height="22" Margin="999,999,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="114"/>
        <StackPanel HorizontalAlignment="Left" Height="26" Margin="999,999,0,0" VerticalAlignment="Top" Width="195" FlowDirection="RightToLeft">
            <ComboBox Name="ComboItem">
                <ComboBoxItem IsSelected="True" Content="LLLAAASDS"/>
                <ComboBoxItem Content=""/>
            </ComboBox>
        </StackPanel>
        <Button Name="MATAK4800" Background="Black" Foreground ="White" BorderThickness="0" Content="מת''ק - Only Fans" HorizontalAlignment="Left" Margin="999,999,0,0" VerticalAlignment="Top" Width="108" FlowDirection="RightToLeft"/>
        <Button Name="Send" Content="TEST" HorizontalAlignment="Left" Margin="999,999,0,0" VerticalAlignment="Top" Width="108"/>
    </Grid>
</Window>
